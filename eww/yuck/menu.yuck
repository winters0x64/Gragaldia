(defwidget power_options []
    (box :orientation "v"
         :space-evenly false
         :valign "top"
         :class "power_options"))


(defwidget menu_ []
    (box :orientation "v"
         :class "menu_"
         (power_options)))

(defwindow menu
    :monitor 0
    :stacking "fg"
    :geometry (geometry :x "25px"
                        :y "5px"
                        :width "100px"
                        :height "100px"
                        :anchor "top left")
    (menu_))
